<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_config_view_form_image_view_combo" model="ir.ui.view">
        <field name="name">pos.config.form.view.image_view_combo</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@name='pos_interface']" position="before">
                <h2 name="pos_iface_view_image_combo">View Combo Product Image</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="iface_view_image_combo">
                        <div class="o_setting_left_pane">
                            <field name="pos_iface_view_image_combo"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_iface_view_image_combo"/>
                            <div class="text-muted">
                                View image of combo product in popup
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
